<h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="" <%= task.completed ? "checked" : "" %> id="checkDefault" disabled>
      <%= link_to task.title, task_path(task) %> - <%= link_to "Delete", task_path(task), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>


<%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>