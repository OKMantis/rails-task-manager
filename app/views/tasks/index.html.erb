<div class="container">
  <h1>My tasks</h1>
  <div class="card" style="width: 50%;">
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <input class="form-check-input" type="checkbox" value="" <%= task.completed ? "checked" : "" %> id="checkDefault" disabled>
          </div>
          <div class="d-flex justify-content-between align-items-center" style="width: 80%;">
            <%= link_to task.title, task_path(task) %> <%= task.details %> <%= link_to "Delete", task_path(task), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="mt-3">
    <%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
